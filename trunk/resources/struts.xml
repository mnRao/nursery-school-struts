<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />

	<!-- <constant name="struts.convention.result.path" value="/www/" /> -->

	<package name="default" extends="struts-default" namespace="/">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<action name="locale" method="execute"
			class="com.duke.nurseryschool.core.LocaleAction">
			<interceptor-ref name="i18n" />
			<interceptor-ref name="basicStack" />
			<!-- <interceptor-ref name="defaultStack"> -->
			<!-- <param name="i18n.parameterName">request_locale</param> -->
			<!-- </interceptor-ref> -->
			<result name="success">Login.jsp</result>
		</action>

		<action name="*Menu" method="{1}" class="com.duke.nurseryschool.MenuAction">
			<result name="tiger" type="tiles">tiger</result>
			<result name="lion" type="tiles">lion</result>
		</action>

		<action name="login" method="authenticate"
			class="com.duke.nurseryschool.LoginAction">
			<result name="success" type="tiles">Dashboard</result>
			<!-- <result name="success">Welcome.jsp</result> -->
			<result name="error">Login.jsp</result>
		</action>
	</package>

</struts>