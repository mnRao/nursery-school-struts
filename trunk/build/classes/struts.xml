<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />

	<!-- <constant name="struts.convention.result.path" value="/www/" /> -->

	<package name="default" extends="struts-default" namespace="/">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<!-- Locale -->
		<action name="locale" method="execute"
			class="com.duke.nurseryschool.core.LocaleAction">
			<interceptor-ref name="i18n" />
			<interceptor-ref name="basicStack" />
			<result name="success" type="tiles">Login</result>
		</action>

		<action name="login" method="authenticate"
			class="com.duke.nurseryschool.LoginAction">
			<result name="success" type="tiles">Dashboard</result>
			<result name="error" type="tiles">Login</result>
			<result name="input" type="tiles">Login</result>
		</action>
		<action name="dashboard" method="execute"
			class="com.duke.nurseryschool.DashboardAction">
			<result name="success" type="tiles">Dashboard</result>
		</action>
	</package>

	<package name="apphibernate" extends="hibernate-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<!-- Student -->
		<action name="*Student" method="{1}"
			class="com.duke.nurseryschool.StudentAction">
			<result name="success" type="tiles">Student</result>
			<result name="successRedirect" type="redirect">listStudent</result>
		</action>
		<!-- Month -->
		<action name="*Month" method="{1}"
			class="com.duke.nurseryschool.MonthAction">
			<result name="success" type="tiles">Month</result>
			<result name="successRedirect" type="redirect">listMonth</result>
		</action>
		<!-- Subject -->
		<action name="*Subject" method="{1}"
			class="com.duke.nurseryschool.SubjectAction">
			<result name="success" type="tiles">Subject</result>
			<result name="successRedirect" type="redirect">listSubject</result>
		</action>
		<!-- Course -->
		<action name="*Course" method="{1}"
			class="com.duke.nurseryschool.CourseAction">
			<result name="success" type="tiles">Course</result>
			<result name="successRedirect" type="redirect">listCourse</result>
		</action>
		<!-- Classes -->
		<action name="*Classes" method="{1}"
			class="com.duke.nurseryschool.ClassesAction">
			<result name="success" type="tiles">Classes</result>
			<result name="successRedirect" type="redirect">listClasses</result>
		</action>
		<!-- Parent -->
		<action name="*Parent" method="{1}"
			class="com.duke.nurseryschool.ParentAction">
			<result name="success" type="tiles">Parent</result>
			<result name="successRedirect" type="redirect">listParent</result>
		</action>
		<!-- Fee Policy -->
		<action name="*FeePolicy" method="{1}"
			class="com.duke.nurseryschool.FeePolicyAction">
			<result name="success" type="tiles">FeePolicy</result>
			<result name="successRedirect" type="redirect">listFeePolicy</result>
		</action>
		<!-- Payment -->
		<action name="*Payment" method="{1}"
			class="com.duke.nurseryschool.PaymentAction">
			<result name="success" type="tiles">Payment</result>
			<result name="successRedirect" type="redirect">listPayment</result>
		</action>
		<!-- ExtraFeeType -->
		<action name="*ExtraFeeType" method="{1}"
			class="com.duke.nurseryschool.ExtraFeeTypeAction">
			<result name="success" type="tiles">ExtraFeeType</result>
			<result name="successRedirect" type="redirect">listExtraFeeType</result>
		</action>
		<!-- FeeDetails -->
		<action name="*FeeDetails" method="{1}"
			class="com.duke.nurseryschool.FeeDetailsAction">
			<result name="success" type="tiles">FeeDetails</result>
			<result name="successRedirect" type="redirect">listFeeDetails</result>
		</action>
		<!-- ExtraFeeMap -->
		<action name="*ExtraFeeMap" method="{1}"
			class="com.duke.nurseryschool.ExtraFeeMapAction">
			<result name="success" type="tiles">ExtraFeeMap</result>
			<result name="successRedirect" type="redirect">listExtraFeeMap</result>
		</action>
		<!-- SubjectFeeMap -->
		<action name="*SubjectFeeMap" method="{1}"
			class="com.duke.nurseryschool.SubjectFeeMapAction">
			<result name="success" type="tiles">SubjectFeeMap</result>
			<result name="successRedirect" type="redirect">listSubjectFeeMap</result>
		</action>
		<!-- Excel Generator-->
		<action name="generateExcel" class="com.duke.nurseryschool.ExcelGeneratorAction">
			<result name="success" type="stream">
				<param name="contentDisposition">attachment;filename=${fileName}</param>
				<param name="contentType">appliation/vnd.ms-excel</param>
				<param name="inputName">fileInputStream</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
	</package>

</struts>