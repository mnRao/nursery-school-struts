<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />

	<!-- <constant name="struts.convention.result.path" value="/www/" /> -->

	<package name="default" extends="struts-default" namespace="/">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<!-- Locale -->
		<action name="locale" method="execute"
			class="com.duke.nurseryschool.core.LocaleAction">
			<interceptor-ref name="i18n" />
			<interceptor-ref name="basicStack" />
			<result name="success" type="tiles">Login</result>
		</action>

		<action name="login" method="authenticate"
			class="com.duke.nurseryschool.LoginAction">
			<result name="success" type="tiles">Dashboard</result>
			<result name="error" type="tiles">Login</result>
			<result name="input" type="tiles">Login</result>
		</action>
		<action name="dashboard" method="execute"
			class="com.duke.nurseryschool.DashboardAction">
			<result name="success" type="tiles">Dashboard</result>
		</action>
	</package>

	<package name="apphibernate" extends="hibernate-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<!-- Student -->
		<action name="addStudent" method="execute"
			class="com.duke.nurseryschool.StudentAction">
			<result name="success" type="redirect">listStudents</result>
			<result name="input" type="redirect">listStudents</result>
		</action>
		<action name="listStudents" method="listStudents"
			class="com.duke.nurseryschool.StudentAction">
			<result name="success" type="tiles">Student</result>
			<result name="input" type="tiles">Student</result>
			<!-- <result name="success">Student.jsp</result> -->
		</action>
		<!-- Month -->
		<action name="addMonth" method="execute"
			class="com.duke.nurseryschool.MonthAction">
			<result name="success" type="redirect">listMonths</result>
			<result name="input" type="redirect">listMonths</result>
		</action>
		<action name="listMonths" method="listMonths"
			class="com.duke.nurseryschool.MonthAction">
			<result name="success" type="tiles">Month</result>
			<result name="input" type="tiles">Month</result>
		</action>
		<!-- Subject -->
		<action name="*Subject" method="{1}"
			class="com.duke.nurseryschool.SubjectAction">
			<result name="success" type="tiles">Subject</result>
			<result name="successRedirect" type="redirect">listSubject</result>
		</action>

	</package>

</struts>