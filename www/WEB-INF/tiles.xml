<tiles-definitions>

	<definition name="MainLayout" template="/templates/MainLayout.jsp">
		<put-attribute name="title" value="Duke Corp" />
		<put-attribute name="headerResources" value="/templates/headerResources.jsp" />
		<put-attribute name="header" value="/templates/header.jsp" />
		<put-attribute name="menu" value="/templates/menu.jsp" />
		<put-attribute name="headTitle" value="Default Title" />
		<put-attribute name="body" value="/templates/body.jsp" />
		<put-attribute name="footer" value="/templates/footer.jsp" />
		<put-attribute name="footerResources" value="/templates/footerResources.jsp" />
	</definition>
	<definition name="LoginLayout" template="/templates/LoginLayout.jsp">
		<put-attribute name="title" value="Duke Corp" />
		<put-attribute name="headerResources" value="/templates/headerResources.jsp" />
		<put-attribute name="body" value="/templates/body.jsp" />
		<put-attribute name="footerResources" value="/templates/footerResources.jsp" />
	</definition>

	<definition name="Login" extends="LoginLayout">
		<put-attribute name="body" value="/Login.jsp" />
	</definition>

	<definition name="Dashboard" extends="MainLayout">
		<put-attribute name="headTitle" value="Dash Board" />
		<put-attribute name="body" value="/pages/Dashboard.jsp" />
	</definition>
	
	<definition name="Student" extends="MainLayout">
		<put-attribute name="headTitle" value="Student Management" />
